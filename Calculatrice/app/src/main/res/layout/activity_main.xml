<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/lincolor"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.thierry.calculatrice.MainActivity">

    <TextView
        android:text="Calculatrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:id="@+id/textView14" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="132dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:layout_weight="0.55">

            <TextView
                android:text="Premier Nombre"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="52dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nombreUn" />

            <TextView
                android:text="Deuxieme Nombre"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="27dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nombreDeux" />

            <Button
                android:text="addition"
                android:layout_marginTop="70dp"
                android:background="@color/bluecolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addition" />

            <Button
                android:text="Multiplication"
                android:background="@color/orangecolor"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/multiplication" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="144dp"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:inputType="number"
                android:hint="entrer nombre1"
                android:ems="10"
                android:id="@+id/valeurUn" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="entrer nombre2"
                android:ems="10"
                android:id="@+id/valeurDeux" />

            <Button
                android:text="soustraction"
                android:layout_marginTop="57dp"
                android:background="@color/redcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/soustraction" />

            <Button
                android:text="division"

                android:layout_marginTop="20dp"
                android:background="@color/marroncolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/division" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
